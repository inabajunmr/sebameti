{
  "manifest_version": 3,
  "name": "sebameti",
  "version": "1.0.0",
  "description": "Toggle side sliders to adjust the current page's content width without changing the window size.",
  "permissions": ["scripting", "activeTab"],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Toggle window width sliders",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png"
    }
  }
}
